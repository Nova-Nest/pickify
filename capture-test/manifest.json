{
    "manifest_version": 3,
    "name": "사이드 패널 캡쳐 도구",
    "version": "1.0",
    "description": "사이드 패널에서 화면을 캡쳐하고 확인하는 도구",
 "permissions": [
      "activeTab",
      "scripting",
      "sidePanel",
      "storage",
      "tabs"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "side_panel": {
        "default_path": "sidepanel/index.html"
    }
  }